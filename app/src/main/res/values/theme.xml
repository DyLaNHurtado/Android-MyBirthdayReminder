<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyBirthdayReminder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_background</item>
        <item name="colorPrimaryVariant">@color/purple_background</item>
        <item name="colorOnPrimary">@color/green_primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_secundaryColor</item>
        <item name="colorSecondaryVariant">@color/purple_background</item>
        <item name="colorOnSecondary">@color/green_primaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyBirthdayReminder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyBirthdayReminder.BackNav">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="Theme.Todoister.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Todoister.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>