<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutItemList"
    style="@style/Theme.MyBirthdayReminder.BackNav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3E3E3E"
    android:theme="@style/Theme.MyBirthdayReminder.BackNav"
    tools:context=".AddBirthdayActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="184dp"
        android:layout_height="165dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-50dp"
        android:rotation="270"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adorno1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="184dp"
        android:layout_height="165dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="-50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adorno1" />

    <ImageView
        android:id="@+id/birthdayPreviewPhoto"
        android:layout_width="232dp"
        android:layout_height="190dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cumpleanero" />

    <TextView
        android:id="@+id/birthdayPreview_Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#4B8E81"
        android:padding="10dp"
        android:text="@string/addBirthday_name"
        android:textAlignment="center"
        android:textColor="@color/white_extraColor"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdayPreviewPhoto"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/birthdayPreview_Date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#1C99DD"
        android:padding="10dp"
        android:text="@string/addBirthday_birthdate"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birthdayPreview_Name" />

</androidx.constraintlayout.widget.ConstraintLayout>